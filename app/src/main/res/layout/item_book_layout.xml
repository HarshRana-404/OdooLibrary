<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_book_img"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/book"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author Name: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_book_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_book_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_book_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Â· "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_book_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Available"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_book_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Unless required by applicable law or agreed to in writing, software
distributed under the License is distributed on an BASIS,
WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.
See the License for the specific language governing permissions and
limitations under the License."
                android:lines="4"
                android:ellipsize="end" />

        </LinearLayout>

        
    </LinearLayout>

</androidx.cardview.widget.CardView>